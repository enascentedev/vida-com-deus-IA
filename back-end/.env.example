# Copie este arquivo para .env e ajuste os valores

# App
APP_NAME="Vida com Deus API"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# CORS (separados por vírgula quando múltiplos)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# JWT — TROQUE EM PRODUÇÃO!
JWT_SECRET_KEY=change-me-in-production-use-a-strong-random-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Banco de dados (Fase 2)
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/vidacomdeus

# Redis (Fase 2)
REDIS_URL=redis://localhost:6379/0
